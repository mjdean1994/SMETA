<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SMETA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <p class="navbar-text">Data Scraper Health Monitor</p>
            @if (ViewBag.Status)
            {
                <button type="button" id="toggleStream" class="btn btn-danger navbar-btn navbar-right" data-toggle="tooltip" data-placement="bottom" title="Stop Stream"><i class="fa fa-stop"></i></button>
            }
            else
            {
                <button type="button" id="toggleStream" class="btn btn-success navbar-btn navbar-right" data-toggle="tooltip" data-placement="bottom" title="Start Stream"><i class="fa fa-play"></i></button>
            }

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/toastr");
    @RenderSection("scripts", required: false)
</body>
</html>
